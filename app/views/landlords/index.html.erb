<h1>Listing landlords</h1>

<table>
  <tr>
    <th>Firstname</th>
    <th>Lastname</th>
    <th>Email</th>
    <th>Hashed password</th>
    <th>Salt</th>
  </tr>

<% @landlords.each do |landlord| %>
  <tr>
    <td><%=h landlord.firstname %></td>
    <td><%=h landlord.lastname %></td>
    <td><%=h landlord.email %></td>
    <td><%=h landlord.hashed_password %></td>
    <td><%=h landlord.salt %></td>
    <td><%= link_to 'Show', landlord %></td>
    <td><%= link_to 'Edit', edit_landlord_path(landlord) %></td>
    <td><%= link_to 'Destroy', landlord, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New landlord', new_landlord_path %>