<h1>Listing applications</h1>

<table>
  <tr>
    <th>Unit</th>
    <th>Tenant</th>
    <th>Term type</th>
    <th>Start date</th>
    <th>End date</th>
    <th>First mont due</th>
  </tr>

<% @applications.each do |application| %>
  <tr>
    <td><%=h application.unit_id %></td>
    <td><%=h application.tenant_id %></td>
    <td><%=h application.term_type %></td>
    <td><%=h application.start_date %></td>
    <td><%=h application.end_date %></td>
    
    <td><%= link_to 'Show', application %></td>
    <td><%= link_to 'Edit', edit_application_path(application) %></td>
    <td><%= link_to 'Destroy', application, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

