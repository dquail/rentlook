 <div class="rentlook_form">
 <% form_for @property, :html=>{ :multipart=>true} do |f| %>
    <%= f.error_messages %>
    <%=hidden_field_tag :landlord_id, @user.id%>
    <fieldset>
      <legend>Enter the details of your new property</legend>
      <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
      <div>
        <%= f.label :address %><br />
        <%= f.text_field :address %>
      </div>
      <div>
        <%= f.label :city %><br />
        <%= f.text_field :city %>
      </div>
      <div>
        <%= f.label :state %><br />
        <%= f.text_field :state %>
      </div>
      <div>
        <%= f.label :zip %><br />
        <%= f.text_field :zip %>
      </div>
      <div>
        <%= f.label :country %><br />
        <%= f.text_field :country %>
      </div>
      <div>
        <%= f.label :photo %><br />
        <%=f.file_field :photo%>
      </div>
      <div>
        <label for="number_of_units">Number of units</label><br />
        <input id="number_of_units" name="number_of_units" size="3" type="text" />
      </div>

      <%= f.submit 'Create' %>
    </fieldset>
  <% end %>

  <%= link_to 'Back', properties_path %>
</div>