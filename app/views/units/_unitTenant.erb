<div id='<%='unit_' +unit.id.to_s%>' class="unit">
  <h1><%=h unit.name %></h1>
  <div class="status">
    <h4>Current Status:
      <div id='<%='rented_' +unit.id.to_s%>'>
        <% if unit.rented %>
          Rented
        <% else %>
          Vacant
        <%end%>
      </div>
      <div id='<%='listed_' +unit.id.to_s%>'>
        <% if unit.listed %>
          Listed
        <%end%>
      </div>
    </h4>
  </div>
  <div id ="lease">
    <h4>Current Lease:</h4>
    <%if !unit.leases.nil?%>
      <br/>
      <h4>Current Lease: </h4>
      <div id='<%='lease_' +unit.leases[0].id.to_s%>'>
        <%=render :partial=>"leases/lease", :object=>unit.leases[0]%>
        
        <%=render :partial=>"leases/leaseMenu", :locals=>{:lease=>unit.leases[0]}%>
      </div>
    <%end%>
  </div>
  <div class="clear"></div>
  <div id ="occupants">
    <%if !unit.current_occupancies.nil?%>
      <br/>
      <h4>Current Occupants: </h4>
      <div id='<%='unit_' +unit.id.to_s + '_occupants'%>'>
        <%unit.current_occupancies.each do |current_occupancy|%>
          <h4><%=current_occupancy.tenant.firstname%> <%=current_occupancy.tenant.lastname%></h4>
        <%end%>
      </div>
    <%end%>
  </div>
  <div id ="applications">
    <%if !unit.applications.nil?%>
      <br/>
      <h4>Applications: </h4>
      <div id='<%='unit_' +unit.id.to_s + '_applications'%>'>
        <%unit.applications.each do |application|%>
          <h4> <%=  application.tenant.firstname%> <%=application.tenant.lastname %> <%=application.status %>
           | <%= link_to 'View application', application %> | <%= link_to 'Delete application', application, :confirm => 'Are you sure?', :method=>:delete %> |
          </h4>
        <%end%>
      </div>
    <%end%>
  </div>

  <div class="actions">
  <% if !unit.leases[0].nil? %>
  | <%= link_to 'Add occupant', new_unit_occupancy_path(unit) %>
  | <%= link_to 'View lease', unit.leases[0] %>
  | <%= link_to 'Delete lease', unit.leases[0], :confirm => 'Are you sure?', :method => :delete %>
  <% else %>
  | New lease by uploading existing |
  | <%= link_to 'Send lease application', :controller=>"units", :action=>"new_application", :id=>unit %>
  <%end%>
  
  <% if !unit.listed? %>
    <% remote_form_for(unit, :update=>'unit_'+unit.id.to_s) do |f| %>
      <%=f.hidden_field :listed, :value=>true %>
      <%= f.submit 'List the unit' %>
    <%end%>
  <%else%>
    <% remote_form_for(unit, :update=>'unit_'+unit.id.to_s) do |f| %>
      <%=f.hidden_field :listed, :value=>0 %>
      <%= f.submit 'Remove the listing' %>
    <%end%>
  <%end%>
  </div>
</div>