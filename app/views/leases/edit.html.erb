<h1>Editing lease</h1>

<% form_for([@unit,@lease]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :manager_id %><br />
    <%= f.text_field :manager_id %>
  </p>
  <p>
    <%= f.label :tenant_id %><br />
    <%= f.text_field :tenant_id %>
  </p>
  <p>
    <%= f.label :start_date %><br />
    <%= f.date_select :start_date %>
  </p>
  <p>
    <%= f.label :end_date %><br />
    <%= f.date_select :end_date %>
  </p>
  <p>
    <%= f.label :rent %><br />
    <%= f.text_field :rent %>
  </p>
  <p>
    <%= f.label :auto_collect %><br />
    <%= f.check_box :auto_collect %>
  </p>
  <p>
    <%= f.label :auto_incriment %><br />
    <%= f.check_box :auto_incriment %>
  </p>
  <p>
    <%= f.label :auto_incriment_pct %><br />
    <%= f.text_field :auto_incriment_pct %>
  </p>
  <p>
    <%= f.label :rent_due_date %><br />
    <%= f.text_field :rent_due_date %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

